<style>
    table,
    th,
    td {
        border: 1px solid black;
    }
</style>

<h3>Productos</h3>
{{#if showAllProducts}}
<table style="border:1px solid black;">
    <tr style="border:1px solid black;">
        <td style="width:40%;"> <b>Nombre</b></td>
        <td style="width:40%;"> <b>Precio</b></td>
        <td style="width:60%; height:40%"> <b>Foto</b></td>
    </tr>
    {{#each products}}
    <div>
        <tr>
            <td style="width:40%;">
                <h4>{{this.title}}</h4>
            </td>
            <td style="width:40%;">
                <h4>{{this.price}}</h4>
            </td>
            <td style="width:20%;"> <img src={{this.thumbnail}} alt={{this.title}} style="width:60px;">
            </td>
        </tr>
    </div>
    {{/each}}
</table>
{{else}}
<h3> No se encontraron productos </h3>
{{/if}}

<div>
    <a href="/api/inicio"> Volver </a>
</div>